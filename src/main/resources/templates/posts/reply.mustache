{{>layouts/header}}


<div class="container-fluid py-3">
    <form>
        <div class="form-group">
            <select class="form-control" disabled>
                <option value="{{post.boardId}}">{{post.boardName}}</option>
            </select>
        </div>
        <div class="form-group">
            <input type="hidden" id="parent-id" value="{{post.id}}">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" value="Re: {{post.title}}">
        </div>
        <div class="form-group">
            <label for="content">내용</label>
            <textarea class="form-control" id="content" rows="10" placeholder="내용을 입력하세요" autofocus></textarea>
        </div>
    </form>
    <div class="d-flex">
        <a href="../{{post.id}}" role="button" class="btn btn-secondary mr-auto">취소</a>
        <button type="button" class="btn btn-success" id="btn-save-reply">등록</button>
    </div>
</div>


{{>layouts/footer}}
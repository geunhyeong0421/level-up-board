{{>layouts/header}}


<div class="container-fluid">
    <div class="row">
        <!-- 게시판(사이드바) -->
        <div class="col-sm-2 py-3" style="background-color:#e9ecef">
            <h3>게시판(Lv.12)</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="#">전체글 보기</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">자유게시판</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">공지사항</a>
                </li>
            </ul>
        </div>
        <div class="col-sm-10 py-3">
            <form>
                <div class="form-group">
                    <label for="post-id">번호</label>
                    <input type="text" class="form-control" id="post-id" value="{{post.id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" value="{{post.title}}">
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea class="form-control" id="content" rows="10">{{post.content}}</textarea>
                </div>
            </form>
            <a href="../{{post.id}}" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-success" id="btn-update">완료</button>
        </div>
    </div>
</div>


{{>layouts/footer}}
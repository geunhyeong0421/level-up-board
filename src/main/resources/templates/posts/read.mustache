{{>layouts/header}}

<div class="container">
    <form>
        <div class="form-group">
            <label for="id">번호</label>
            <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
        </div>
        <div class="form-group">
            <label for="createdDate">작성일</label>
            <input type="text" class="form-control" id="createdDate" value="{{post.createdDate}}" readonly>
        </div>
        <div class="form-group">
            <label for="modifiedDate">최종 수정일</label>
            <input type="text" class="form-control" id="modifiedDate" value="{{post.modifiedDate}}" readonly>
        </div>
        <div class="form-group">
            <label for="writer">작성자</label>
            <input type="text" class="form-control" id="writer" value="{{post.writer}}" readonly>
        </div>
        <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" value="{{post.title}}" readonly>
        </div>
        <div class="form-group">
            <label for="content">내용</label>
            <textarea class="form-control" id="content" readonly>{{post.content}}</textarea>
        </div>
    </form>
    <a href="/" role="button" class="btn btn-secondary">목록</a>
    {{#isMyPost}}
        <a href="/posts/{{post.id}}/edit" role="button" class="btn btn-info">수정</a>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    {{/isMyPost}}
</div>

{{>layouts/footer}}
{{>layouts/header}}


<!-- body -->
<div class="container-fluid">
    <div class="row">
        <!-- 게시판(사이드바) -->
        <div class="col-sm-2 py-3" style="background-color:#e9ecef">
            <h3>게시판(Lv.7)</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="#">전체글 보기</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">자유게시판</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">공지사항</a>
                </li>
            </ul>
        </div>
        <div class="col-sm-10 py-3">
            <form>
                <input type="hidden" id="userId" value="{{loginUser.id}}">
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" autofocus>
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea class="form-control" id="content" rows="10" placeholder="내용을 입력하세요"></textarea>
                </div>
            </form>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-success" id="btn-save">등록</button>
        </div>
    </div>
</div>

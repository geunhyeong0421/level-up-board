{{>layouts/header}}


<div class="container-fluid py-3">
    <form action="" method="get" id="form-criteria">
        {{#cri.type}}<input type="hidden" name="type" value="{{cri.type}}">{{/cri.type}}
        {{#cri.keyword}}<input type="hidden" name="keyword" value="{{cri.keyword}}">{{/cri.keyword}}
        <input type="hidden" name="page" value="{{cri.page}}">
        <input type="hidden" name="size" value="{{cri.size}}">
    </form>
    <form>
        <div class="form-group">
            <select class="form-control"{{#allPosts}} autofocus{{/allPosts}}{{^allPosts}} disabled{{/allPosts}}>
                {{#allPosts}}
                    <option value="">-- 선택 --</option>
                    {{#loginUser.isAdmin}}
                        {{#boards}}
                            <option value="{{id}}">{{name}}</option>
                        {{/boards}}
                    {{/loginUser.isAdmin}}
                    {{^loginUser.isAdmin}}
                        {{#boards}}
                            {{^adminOnly}}
                                <option value="{{id}}">{{name}}</option>
                            {{/adminOnly}}
                        {{/boards}}
                    {{/loginUser.isAdmin}}
                {{/allPosts}}
                {{^allPosts}}
                    {{#boards}}
                        {{#isCurrentBoard}}
                            <option value="{{id}}">{{name}}</option>
                        {{/isCurrentBoard}}
                    {{/boards}}
                {{/allPosts}}
            </select>
        </div>
        <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요"{{^allPosts}} autofocus{{/allPosts}}>
        </div>
        <div class="form-group">
            <label for="content">내용</label>
            <textarea class="form-control" id="content" rows="10" placeholder="내용을 입력하세요"></textarea>
        </div>
    </form>
    <div class="d-flex">
        <a href="../posts" role="button" class="posts btn btn-secondary mr-auto">취소</a>
        <button type="button" class="btn btn-success" id="btn-save">등록</button>
    </div>
</div>


{{>layouts/footer}}
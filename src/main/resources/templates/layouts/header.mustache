<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/webjars/bootstrap/4.6.0/css/bootstrap.min.css">

    <title>게시판 키우기</title>
</head>
<body>

<div class="container-fluid text-center py-4 border-bottom">
    <a class="text-decoration-none text-dark" href="/">
        <h1 class="font-weight-bold mb-4">게시판 키우기</h1>
    </a>
    <!--로그인 기능 영역-->
    <div class="col">
        {{#user.name}}
            {{#user.picture}}
                <img src="{{user.picture}}" class="rounded-circle" height="50" width="50" alt="사진 있다">
            {{/user.picture}}
            {{^user.picture}}
                <img src="/images/blank_profile_picture.png" class="rounded-circle" height="50" width="50" alt="사진 없다">
            {{/user.picture}}
            <p class="my-2"><span class="font-weight-bold">{{user.name}}</span>님 반갑습니다!</p>
            <a href="/logout" class="btn btn-primary active btn-sm" role="button">로그아웃</a>
        {{/user.name}}
        {{^user.name}}
            <p class="mb-2">방문해 주셔서 감사합니다.</p>
            <a href="/login" class="btn btn-primary">로그인</a>
        {{/user.name}}
    </div>
</div>

